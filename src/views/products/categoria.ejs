<!DOCTYPE html>
<html lang="es">
<head>
    <%- include("../partials/head") %>
</head>
<body>

    <%- include("../partials/header") %>

    <main>

        <section class="main-listar-secciones">

        </section>

        <h2 class="main-titulo-destacado">
            <%= categoria.category_name %>
        </h2>

        <section class="prods-destacados">

            <% filtrados.forEach (filtrado => { %> 
            <article class="articulo-destacado">
                <div class="div-interno-art-destacado">
                    <p class="prod-dectacado__titulo"> <%= filtrado.product_name %> </p>
                </div>
                <div class="div-interno-art-destacado">
                    <p class="prod-destacado__detalle">
                        <%= filtrado.product_description_short %>
                    </p>
                </div>
                <div class="div-interno-art-destacado">
                    <p class="prod-dectacado__precio">$<%= parseInt(filtrado.product_price).toLocaleString() %> </p>
                    <a class="prod-destacado__link" href="/productos/detalle/<%= filtrado.id %>"><p class="prod-destacado__button">Ver detalle</p></a>
                </div>
                <div class="div-imagen-prod">
                    <img class="prod-destacado__img" src="/img/products/<%= filtrado.product_images %> ">
                </div>
            </article>
            <% }) %>

        </section>
        
    </main>

    <%- include("../partials/footer") %>
    
</body>
</html>