<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include("../partials/head") %>
  </head>
  <body>
    <%- include("../partials/header-modulo-admin") %>

    <main>

      <div class="div-titulo-boton-comprar">
        <h2 class="titulo-alta-prod">
          ABM de productos: Edición de producto existente.
        </h2>
      </div>

      <section class="prods-destacados">
        <article class="articulo-detalle-desktop">
          <form action="" method="POST" enctype="multipart/form-data">
            <div class="div-select-alta">
              <label class="label-alta-prod" for="nombreProd">Nombre del producto</label>
              <input class="input-abm" type="text" name="nombreProd" value="<%= editable.product_name %>" required/>
            </div>
            <div class="div-select-alta">
              <label class="label-alta-prod" for="precioProd">Precio del producto</label>
              <input class="input-abm-precio" type="text" name="precioProd" value="<%= editable.product_price %>" required/>
            </div>
            <div class="div-select-alta">
              <label class="label-alta-prod" for="subtitulProd">Subtitulo del producto</label>
              <input class="input-abm" type="text" name="subtituloProd" value="<%= editable.product_description_short %>" required/>
            </div>
            <div class="div-select-alta">
              <label class="label-alta-prod" for="categoriaProd">Categoria</label>
              <select class="input-abm" name="categoriaProd" required>
              <% categories.forEach ( categorie => { %>
                <% if (categorie.id == editable.category_id) { %>
                        <option value="<%= categorie.id %>" selected="selected"><%= categorie.category_name %></option>
                <% } else { %>
                        <option value="<%= categorie.id %>"><%= categorie.name %></option>
                <% } %>
              <% }) %>        
              </select>
            </div>
            <div class="div-select-alta">
              <label class="label-alta-prod" for="fotoProd">Foto del producto: sí no se elige una nueva foto, se utilizará la que estaba por defecto.</label>
              <input class="input-abm" type="file" name="fotoProd" accept=".jpg, .jpeg, .png"/>
            </div>
            <div class="div-select">
              <label class="label-alta-prod" for="nuevo-prod">El producto es usado?</label>
              <span class="texto-span">Si</span>
              <input class="abm-radiobutton" type="radio" name="nuevo" value="1"
              <% if (editable.flag_used_product == true) {%> checked <%}  %> />
              <span class="texto-span">No</span>
              <input class="abm-radiobutton" type="radio" name="nuevo" value="0"
                <% if (editable.flag_used_product == false) {%> checked <%}  %> />
            </div>
            <div class="div-select">
              <label class="label-alta-prod" for="destacado-prod"
                >El producto es un lanzamiento destacado?</label
              >
              <span class="texto-span">Si</span
              ><input
                class="abm-radiobutton"
                type="radio"
                name="lanzamiento"
                value="1"
                <% if (editable.flag_hot_product == true) {%>
                    checked
                  <%}  %> 
              /><span class="texto-span">No</span
              ><input
                class="abm-radiobutton"
                type="radio"
                name="viejo"
                value="0"
                <% if (editable.flag_hot_product == false) {%>
                    checked
                  <%}  %> 
              />
            </div>
            <div class="div-select-alta">
              <label class="label-alta-prod" for="descripcionProd">Información adicional</label>
              <textarea class="textarea-abm" name="descripcionProd" equired><%= editable.product_description_long %></textarea>
            </div>
            <div class="div-select">
              <button class="boton-abm" type="submit">MODIFICAR</button>
              <button class="boton-abm" type="reset">Borrar el formulario</button>
            </div>
          </form>
        </article>
      </section>
    </main>

    <%- include("../partials/footer") %>
  </body>
</html>
