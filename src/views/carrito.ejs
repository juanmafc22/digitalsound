                    <div class="price-quantity-div">
                        $1.234
                    </div>
                    <div class="product-quantity-div">
                        <i class="fa-solid fa-square-minus"></i>
                        <input type="tel" name="shopping-cart-quantity" class="quantity-input">
                        <i class="fa-solid fa-square-plus"></i>
